@model MvcStok.Models.Entity.Tblurunler

@{
    ViewData["Title"] = "YeniÜrün";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Yeni Ürün Ekle</h1>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Yeni Ürün</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("YeniUrun", "Urun", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(model => model.URUNAD, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.URUNAD, new { @class = "form-control", placeholder = "Ürün adı girin" })
                    @Html.ValidationMessageFor(model => model.URUNAD, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.MARKA, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.MARKA, new { @class = "form-control", placeholder = "Marka girin" })
                    @Html.ValidationMessageFor(model => model.MARKA, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.URUNKATEGORI, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.URUNKATEGORI,
                             ViewBag.v1 as List<SelectListItem>,
                             "Kategori Seçiniz",
                             new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.URUNKATEGORI, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.FIYAT, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FIYAT, new { @class = "form-control", placeholder = "Fiyat girin" })
                    @Html.ValidationMessageFor(model => model.FIYAT, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.STOK, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.STOK, new { @class = "form-control", placeholder = "Stok girin" })
                    @Html.ValidationMessageFor(model => model.STOK, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            }
        </div>
    </div>
</div>
